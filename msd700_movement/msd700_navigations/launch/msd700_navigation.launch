<launch>
    <!-- Arguments -->
    <arg name="open_rviz"           default="true"/>
    <arg name="use_simulator"       default="false"/>
    <arg name="move_forward_only"   default="false"/>
    <arg name="map_file"            default="$(find msd700_navigations)/maps/fluid_lab.yaml"/>
    <arg name="model"               default="$(find msd700_visual)/urdf/irbot.urdf.xacro"/>
    <arg name="rviz_config"         value="$(find msd700_visual)/rviz/msd700_navigation.rviz"/>

    <!-- Get the saved map -->
    <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

    <!-- Localization and Navigation -->
    <include file="$(find msd700_navigations)/launch/algorithm/amcl.launch"/>
    <include file="$(find msd700_navigations)/launch/algorithm/move_base.launch">
        <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>

    <!-- Open rviz -->
    <group if="$(arg open_rviz)"> 
        <include file="$(find msd700_bringup)/launch/rviz_launch.launch">
            <arg name="rviz_config" value="$(arg rviz_config)"/>
        </include>
    </group>

    <group if="$(arg use_simulator)"> 
        <param name="robot_description" command="$(find xacro)/xacro --inorder $(find msd700_visual)/urdf/turtlebot3_burger.urdf.xacro" />    
    </group>    

    <group unless="$(arg use_simulator)"> 
        <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />
        <include file="$(find msd700_bringup)/launch/bridger.launch"/>
        <include file="$(find msd700_bringup)/launch/lidar_scanner.launch"/>
        <include file="$(find msd700_control)/launch/robot_localization.launch"/>
    </group>
</launch>
